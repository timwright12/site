---
layout: layouts/base.njk
templateClass: tmpl-project
---

<h1>{{ title }}</h1>

{% if imagePath %}
<figure class="block">
  <img src="../../../img/{{ imagePath }}" alt="Screen shot representing {{ title }}" class="block">
  {% if imgCaption %}
  <figcaption class="fz-small">{{ imgCaption }}</figcaption>
  {% endif %}
</figure>
{% endif %}

{{ content | safe }}
