<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="/css/index.css">

    <script>

		WebFontConfig = {
			google: {
				families: ['Open Sans:400,700', 'Judson:400,700']
			}
		};

		(function(d) {
			var wf = d.createElement('script'), s = d.scripts[0];
			wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js';
			wf.async = true;
			s.parentNode.insertBefore(wf, s);
		})(document);

		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-875557-1', 'auto');
		ga('send', 'pageview');

	</script>

	<noscript>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;0,700;1,400;1,700&Judson:ital,wght@0,400;0,700;1,400&display=swap" />
	</noscript>

  </head>
  <body>

    <header class="banner p-2" id="banner" role="banner">
      <div class="contain-wide flex--lg flex--align-center">
        <div class="col">

        <h1 class="banner__logo m-0" itemscope="" itemtype="http://schema.org/Organization">
          <a href="/" itemprop="url">Tim Wright</a>
        </h1>

        <nav class="nav" role="navigation" id="nav">
          <ul class="m-0 p-0 list--none">
            {%- for entry in collections.all | eleventyNavigation %}
              <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url }}" class="nav-link block">{{ entry.title }}</a></li>
            {%- endfor %}
            <li class="nav-item"><a href="mailto:hello@timwright.org?subject=An Interesting Message from timwright.org" class="nav-link nav-link--contact block">Contact</a></li>
          </ul>
        </nav>

        </div>
        <div class="col">
          <img src="img/hero-10up-small.jpg" alt="Me speaking... somewhere?" class="banner__image" />
        </div>
      </div><!--./contain-wide-->
    </header><!--/.banner-->

    <main{% if templateClass %} class="main {{ templateClass }}"{% endif %} id="main" role="main">
      <div class="contain-wide">
        <div class="gutter p-2">
          {{ content | safe }}
        </div><!--/.gutter-->
      </div><!--/.contain-wide-->
    </main><!--/.main-->

  </body>
</html>
